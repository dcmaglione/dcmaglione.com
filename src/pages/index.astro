---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header title={SITE_TITLE} />
        <main>
            <h1>Hello, I'm Dom.</h1>
            <p>
                I'm a Mission Software Engineer at <a
                    href="https://www.anduril.com/">Anduril Industries</a
                >. I am interested in large-scale distributed systems, high
                performance computing, mesh networking, and artificial
                intelligence.
            </p>
            <p>
                I have Bachelor's and Master's degrees in Computer Science from <a
                    href="https://www.bu.edu/">Boston University</a
                >.
            </p>
        </main>
        <Footer />
    </body>
</html>
